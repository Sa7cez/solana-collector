{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "./build",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": false,
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true
	}
}
